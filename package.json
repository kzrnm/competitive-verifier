{
  "name": "competitive-verifier",
  "version": "0.0.0",
  "private": true,
  "description": "verifier for competitive programming library",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts --fix",
    "lint-check": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "build-package": "npm run build && npm run package",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kzrnm/competitive-verifier.git"
  },
  "keywords": [
    "actions",
    "competitive",
    "atcoder"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0",
    "@rtsao/scc": "^1.1.0",
    "dayjs": "^1.11.0",
    "simple-git": "^3.5.0",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@vercel/ncc": "^0.33.3",
    "eslint": "^8.12.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.4.5",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "^2.6.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "optionalDependencies": {
    "unlimited": "^1.2.2"
  }
}
